{
  "name": "@golem-forge/core",
  "version": "0.1.0",
  "description": "Shared runtime and utilities for golem-forge",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./approval": {
      "types": "./dist/approval/index.d.ts",
      "import": "./dist/approval/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "golem-forge",
    "types",
    "sandbox",
    "runtime"
  ],
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.0-beta.74",
    "@ai-sdk/google": "^3.0.0-beta.65",
    "@ai-sdk/openai": "^3.0.0-beta.84",
    "ai": "^6.0.0-beta.134",
    "isomorphic-git": "^1.36.0",
    "yaml": "^2.8.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  }
}
